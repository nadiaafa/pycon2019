<odoo>
  <data>
    <!-- presentations-->
    <record id="pycon_presentation_form" model="ir.ui.view">
      <field name="name">pycon.presentation.form</field>
      <field name="model">pycon.presentation</field>
      <field name="arch" type="xml">
        <form string="Presentations">
          <group>
            <field name="name"/>
            <field name="date"/>
            <field name="room"/>
            <field name="max_attendees"/>
            <field name="speakers"/>
          </group>
        </form>
      </field>
    </record>
    <record id="pycon_presentation_tree" model="ir.ui.view">
      <field name="name">pycon.presentation.tree</field>
      <field name="model">pycon.presentation</field>
      <field name="arch" type="xml">
        <tree string="Presentations">
            <field name="name"/>
            <field name="date"/>
            <field name="max_attendees"/>
        </tree>
      </field>
    </record>
    <record model="ir.actions.act_window" id="action_pycon_presentation_form">
      <field name="name">Presentation</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">pycon.presentation</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- room-->
    <record id="pycon_room_form" model="ir.ui.view">
      <field name="name">pycon.room.form</field>
      <field name="model">pycon.room</field>
      <field name="arch" type="xml">
        <form string="Room">
          <group>
            <field name="name"/>
            <field name="capacity"/>
            <field name="presentations"/>
          </group>
        </form>
      </field>
    </record>
    <record id="pycon_room_tree" model="ir.ui.view">
      <field name="name">pycon.room.tree</field>
      <field name="model">pycon.room</field>
      <field name="arch" type="xml">
        <tree string="Rooms">
            <field name="name"/>
            <field name="capacity"/>
        </tree>
      </field>
    </record>
    <record model="ir.actions.act_window" id="action_pycon_room_form">
      <field name="name">Rooms</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">pycon.room</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- speakers-->
  <record id="pycon_speaker_form" model="ir.ui.view">
    <field name="name">pycon.speaker.form</field>
    <field name="model">pycon.speaker</field>
    <field name="arch" type="xml">
      <form string="Speaker">
        <group>
          <field name="name"/>
        </group>
      </form>
    </field>
  </record>
  <record id="pycon_speaker_tree" model="ir.ui.view">
    <field name="name">pycon.speaker.tree</field>
    <field name="model">pycon.speaker</field>
    <field name="arch" type="xml">
      <tree string="Speakers">
          <field name="name"/>
      </tree>
    </field>
  </record>
  <record model="ir.actions.act_window" id="action_pycon_speaker_form">
    <field name="name">Speakers</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">pycon.speaker</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>

    <!-- Presentation menus-->
    <menuitem name="pycon" id="menu_pycon" groups="base.group_system"/>
    <menuitem name="Presentations" parent="menu_pycon" id="menu_pycon_presentation"/>
    <menuitem name="presentations" parent="menu_pycon_presentation" id="menu_pycon_presentation_form" action="action_pycon_presentation_form" />
    <!-- room menus-->
    <menuitem name="Rooms" parent="menu_pycon_presentation" id="menu_pycon_room_form" action="action_pycon_room_form" />
    <!-- Speaker menus-->
    <menuitem name="Speakers" parent="menu_pycon_presentation" id="menu_pycon_speaker_form" action="action_pycon_speaker_form" />

  </data>
</odoo>